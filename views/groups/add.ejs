<%- include("../partials/header"); %>

<div class="col-12">
    <h1>Додати  groups</h1>
    <form method="post" action="/groups/insert">
        <div class="form-group">
            <label for="name">name</label>
            <input required id="name" placeholder="Назва групи (Е01)" class="form-control" type="text"
                name="name">
        </div>
        <div class="form-group">
            <label for="course">course</label>
            <input required id="course" placeholder="1" class="form-control" 
            type="number" min="1" max="4" name="course">
        </div>
        <div class="form-group">
            <label for="specid">specid</label>
           
            <select name="specid" id="specid" required class="form-control">
                <option value="<%= specAbr[0]._id %>" selected><%= specAbr[0].abr %></option>
               <% 
               for(let i=1; i<specAbr.length;i++){
                %>
                <option value="<%= specAbr[i]._id %>"><%= specAbr[i].abr %></option>
                <%
               }
               %>              
            </select>
        </div>
        
        <fieldset>
        <div class="form-group">
        <div class="custom-control custom-radio custom-control-inline ">
            <input   id="dogovor_bg"   class="custom-control-input" type="radio" 
            name="dogovor" value="false" checked>
           
            <label class="custom-control-label radio-inline" for="dogovor_bg" >  Бюджет   </label>
        </div>

        <div class="custom-control custom-radio custom-control-inline">
            
            <input   id="dogovor_ct"   class="custom-control-input" type="radio" 
            name="dogovor" value="true">
            <label class="custom-control-label radio-inline" for="dogovor_ct" >
              Контракт</label>
        </div>

    </div>
</fieldset>

       <div class="form-group">
            <label for="studentsdogovor">studentsdogovor Кількість студентів бюджет</label>
            <input   id="studentsdogovor" value="0" class="form-control" type="text" 
            name="studentsdogovor" >
        </div>
        <div class="form-group">
            <label for="studentsbudget">studentsbudget Кількість студентів контракт</label>
            <input   id="studentsbudget" value="0" class="form-control" type="text" 
            name="studentsbudget" >
        </div>

        <div class="form-group">
            <button class="btn btn-success">Зберегти</button>
            &nbsp;<a href="/groups" class="btn btn-info">Назад</a>
        </div>
    </form>
</div>
<%- include("../partials/footer"); %>