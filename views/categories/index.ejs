<%- include("../partials/header"); %>
<div class="col-12">
    <h1>Categories</h1>
    <a href="/categories/add" class="btn btn-primary mb-2 btn-sm">Додати</a>
    <table class="table table-bordered table-striped table-sm">
        <thead>
            <tr>
                <th width="90px">Дії</th>
               
                <th>name</th>
                <th>payment</th>
               
                
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(categories => { %>
            <tr>
                <td>
                    <a href="/categories/edit/<%= categories._id %>" class="btn btn-warning btn-sm" title="Редагувати">
                        <img src="images/edit-24px.svg" width="16px" height="16px" />                   
                    </a>             
                   
                    <a href="/categories/delete/<%= categories._id %>" class="btn btn-danger btn-sm" title="Видалити">
                        <img src="images/delete_outline-24px.svg" width="16px" height="16px" />
                    </a>
                </td>
                <td><%= categories.name %></td>
                <td><%= categories.payment %></td>
               
               
            </tr>
            <% })%>
        </tbody>
    </table>
</div>
<%- include("../partials/footer"); %>